{
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@eslint/eslintrc": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "babel-loader": "^9.1.3",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.1",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "simple-git-hooks": "^2.11.1"
  },
  "scripts": {
    "lint": "eslint django/frontend/**/*.js blockchain/**/*.js",
    "lint:fix": "eslint --fix 'django/frontend/**/*.{js,jsx}' 'blockchain/**/*.js'",
    "prepare": "simple-git-hooks > /dev/null",
    "start": "webpack serve --hot --config webpack.dev.js",
    "build": "webpack build --config webpack.prod.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "django/frontend/**/*.{js,jsx}": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ],
    "{public,django/frontend}/**/*.{html,gql,graphql,json}": [
      "prettier --write --loglevel=error"
    ],
    "blockchain/**/*.js": [
      "prettier --write --loglevel=error",
      "eslint --fix --quiet"
    ],
    "blockchain/**/*.sol": [
      "prettier --write --plugin=prettier-plugin-solidity --loglevel=error",
      "solhint"
    ],
    "django/backend/**/*.py": [
      "black"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "babel": "^6.23.0",
    "hardhat": "^2.22.6",
    "js-cookie": "^3.0.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.1",
    "webpack": "^5.92.1"
  }
}
